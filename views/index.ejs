<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8"><title>Threads</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/style.css">
</head>
<body class="bg-[#101010] text-[#f3f5f7] max-w-xl mx-auto pb-20">
    <header class="h-16 flex items-center justify-between px-4 sticky top-0 bg-[#101010]/80 backdrop-blur-md z-50">
        <div class="w-8"></div>
        <svg class="w-8 h-8 fill-white" viewBox="0 0 192 192"><path d="M141.537 88.9883C140.71 88.5919 139.019 87.8451C137.537 60.5382 122.616 44.905 97.5619 44.745C82.2364 44.7443 69.7731 53.1409 65.0047 68.223"></path></svg>
        <a href="/logout" class="text-xs text-zinc-500 font-bold">ログアウト</a>
    </header>

    <div class="divide-y divide-[#2a2a2a]">
        <% posts.forEach(post => { %>
            <div class="p-4 flex gap-3 relative">
                <div class="flex flex-col items-center">
                    <a href="/profile/<%= post.user_id %>" class="w-10 h-10 rounded-full bg-zinc-800 overflow-hidden relative z-10">
                        <img src="<%= post.profiles?.avatar_url || 'https://via.placeholder.com/40' %>" class="w-full h-full object-cover">
                    </a>
                    <div class="w-[2px] bg-[#2a2a2a] grow mt-2"></div>
                </div>
                <div class="flex-grow">
                    <div class="flex justify-between items-center">
                        <a href="/profile/<%= post.user_id %>" class="font-bold text-sm hover:underline"><%= post.username %></a>
                        <span class="text-zinc-500 text-xs">now</span>
                    </div>
                    <p class="mt-1 text-[15px] text-zinc-200"><%= post.content %></p>
                    <div class="flex gap-5 mt-4">
                        <button onclick="toggleLike('<%= post.id %>')" class="flex items-center gap-1">
                            <svg id="like-<%= post.id %>" class="w-5 h-5 <%= post.likes.some(l => l.user_id === user.id) ? 'fill-red-500 stroke-red-500' : 'stroke-zinc-500 fill-none' %>" viewBox="0 0 24 24" stroke-width="2"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/></svg>
                        </button>
                        <a href="/post?replyTo=<%= post.id %>">
                            <svg class="w-5 h-5 stroke-zinc-500 fill-none" viewBox="0 0 24 24" stroke-width="2"><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 1 1-7.6-11.7c.9 0 1.8.1 2.7.4L21 3l-1.3 4.7c.8 1.2 1.3 2.6 1.3 3.8z"/></svg>
                        </a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>

    <nav class="fixed bottom-0 left-0 right-0 max-w-xl mx-auto bg-[#101010] border-t border-[#2a2a2a] h-16 flex justify-around items-center">
        <a href="/"><svg class="w-6 h-6 stroke-white" viewBox="0 0 24 24" stroke-width="2" fill="none"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/></svg></a>
        <a href="/post"><svg class="w-6 h-6 stroke-zinc-500" viewBox="0 0 24 24" stroke-width="2" fill="none"><path d="M12 5v14M5 12h14"/></svg></a>
        <a href="/profile"><svg class="w-6 h-6 stroke-zinc-500" viewBox="0 0 24 24" stroke-width="2" fill="none"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/></svg></a>
    </nav>
    <script>
        async function toggleLike(postId) {
            await fetch('/like/' + postId, { method: 'POST' });
            location.reload();
        }
    </script>
</body>
</html>
