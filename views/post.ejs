<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <title>New Thread</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/style.css">
</head>
<body class="bg-[#101010] text-white p-4 max-w-xl mx-auto">
    <form action="/post" method="POST">
        <div class="flex justify-between items-center mb-6">
            <a href="/" class="text-zinc-400">キャンセル</a>
            <span class="font-bold"><%= replyTo ? '返信' : '新しいスレッド' %></span>
            <button type="submit" id="postBtn" class="bg-white text-black px-4 py-1.5 rounded-full font-bold disabled:opacity-50" disabled>投稿</button>
        </div>

        <% if (parentPost) { %>
            <div class="mb-6 p-4 bg-zinc-900/50 rounded-2xl border border-zinc-800">
                <p class="text-xs text-zinc-500 font-bold mb-1"><%= parentPost.username %> に返信中</p>
                <p class="text-sm text-zinc-300"><%= parentPost.content %></p>
            </div>
            <input type="hidden" name="parent_id" value="<%= replyTo %>">
        <% } %>

        <div class="flex gap-3">
            <div class="w-10 h-10 rounded-full bg-zinc-800 shrink-0 overflow-hidden">
                <img src="<%= user.avatar_url || 'https://via.placeholder.com/40' %>" class="w-full h-full object-cover">
            </div>
            <div class="w-full">
                <div class="font-bold text-sm mb-1"><%= user.username %></div>
                <textarea name="content" id="content" placeholder="スレッドを開始..." class="w-full bg-transparent border-none focus:ring-0 text-[18px] h-60 resize-none" required></textarea>
            </div>
        </div>
    </form>

    <script>
        const txt = document.getElementById('content');
        const btn = document.getElementById('postBtn');
        txt.addEventListener('input', () => {
            btn.disabled = !txt.value.trim();
        });
    </script>
</body>
</html>
